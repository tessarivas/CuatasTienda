generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Client {
  id             Int       @id @default(autoincrement())
  name           String
  cellphone      String?
  currentBalance Decimal   @default(0)
  Layaway        Layaway[]
  Payment        Payment[]
  Sale           Sale[]
}

model Layaway {
  id          Int           @id @default(autoincrement())
  clientId    Int
  status      String
  createdAt   DateTime      @default(now())
  Client      Client        @relation(fields: [clientId], references: [id])
  LayawayItem LayawayItem[]
}

model LayawayItem {
  id        Int     @id @default(autoincrement())
  layawayId Int
  productId Int
  price     Decimal
  Layaway   Layaway @relation(fields: [layawayId], references: [id])
  Product   Product @relation(fields: [productId], references: [id])
}

model Payment {
  id         Int      @id @default(autoincrement())
  clientId   Int
  amount     Decimal
  date       DateTime @default(now())
  receivedBy String   @db.Uuid
  Client     Client   @relation(fields: [clientId], references: [id])
  User       User     @relation(fields: [receivedBy], references: [id])
}

model Product {
  id          Int           @id @default(autoincrement())
  title       String
  price       Decimal
  status      String
  createdAt   DateTime      @default(now())
  code        String?       @unique
  picture     String?
  quantity    Int?
  soldCount   Int           @default(0)
  supplierId  Int?
  type        ProductType
  LayawayItem LayawayItem[]
  Supplier    Supplier?     @relation(fields: [supplierId], references: [id])
  SaleItem    SaleItem[]
}

model Sale {
  id       Int        @id @default(autoincrement())
  total    Decimal
  date     DateTime   @default(now())
  userId   String     @db.Uuid
  clientId Int?
  Client   Client?    @relation(fields: [clientId], references: [id])
  User     User       @relation(fields: [userId], references: [id])
  SaleItem SaleItem[]
}

model SaleItem {
  id         Int     @id @default(autoincrement())
  saleId     Int
  productId  Int
  finalPrice Decimal
  Product    Product @relation(fields: [productId], references: [id])
  Sale       Sale    @relation(fields: [saleId], references: [id])
}

model Supplier {
  id           Int       @id @default(autoincrement())
  name         String
  businessName String?
  cellphone    String?
  email        String?
  logo         String?
  createdAt    DateTime  @default(now())
  Product      Product[]
}

model User {
  id        String    @id @default(uuid()) @db.Uuid
  name      String
  email     String    @unique
  role      String
  createdAt DateTime  @default(now())
  Payment   Payment[]
  Sale      Sale[]
}

enum ProductType {
  PRODUCT
  SERVICE
}
